{
  "name": "SMS Gateway Monorepo",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "BUILDPLATFORM": "linux/arm64",
      "TARGETPLATFORM": "linux/arm64"
    }
  },
  "runArgs": ["--platform=linux/arm64"],
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",

  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/gcloud,target=/home/app/.config/gcloud,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "CLAUDE_CODE_USE_VERTEX": "1",
    "ANTHROPIC_VERTEX_PROJECT_ID": "${localEnv:ANTHROPIC_VERTEX_PROJECT_ID:cmp-opal-dev-tbon}",
    "VERTEX_REGION_CLAUDE_4_5": "${localEnv:VERTEX_REGION_CLAUDE_4_5:asia-southeast1}",
    "VERTEX_REGION_CLAUDE_4_5_SONNET": "${localEnv:VERTEX_REGION_CLAUDE_4_5_SONNET:asia-southeast1}",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "${localEnv:CLAUDE_CODE_ENABLE_TELEMETRY:1}",
    "OTEL_EXPORTER_OTLP_METRICS_ENDPOINT": "${localEnv:OTEL_EXPORTER_OTLP_METRICS_ENDPOINT}",
    "GOOGLE_APPLICATION_CREDENTIALS": "/home/app/.config/gcloud/application_default_credentials.json"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "usernamehw.errorlens",
        "Anthropic.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/apps/gateway/.venv/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          "**/.pytest_cache": true,
          "**/node_modules": true
        }
      }
    }
  },

  "forwardPorts": [8000, 6379],

  "portsAttributes": {
    "8000": {
      "label": "Gateway API",
      "onAutoForward": "notify"
    },
    "6379": {
      "label": "Redis"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup-claude.sh && cd apps/gateway && uv sync && cd ../providers && npm install",

  "remoteUser": "app",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  }
}